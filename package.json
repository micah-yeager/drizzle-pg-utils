{
  "name": "drizzle-pg-utils",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "pkgroll --src ./lib",
    "format": "biome format",
    "lint": "biome lint",
    "test": "vitest run",
    "test:watch": "vitest --ui --open false",
    "test:coverage": "vitest run --coverage.enabled true"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@testcontainers/postgresql": "^10.11.0",
    "@types/luxon": "^3.4.2",
    "@types/pg": "^8.11.6",
    "@vitest/coverage-v8": "^3.0.2",
    "@vitest/ui": "^3.0.2",
    "drizzle-kit": "^0.30.2",
    "drizzle-orm": "^0.38.4",
    "luxon": "^3.5.0",
    "pg": "^8.12.0",
    "pkgroll": "^2.4.2",
    "type-fest": "^4.32.0",
    "typescript": "^5.7.3",
    "vitest": "3.0.2"
  },
  "peerDependencies": {
    "drizzle-orm": "^0.38.4"
  }
}
